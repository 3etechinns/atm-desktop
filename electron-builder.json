{
  "appId": "com.hoversoftsoln.SmartATMManager",
  "productName": "Smart ATM Manager",
  "copyright": "Copyright Â© 2018 - SAM",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist/favicon.ico",
    "legalTrademarks": "Hover Software Solutions",
    "target": ["nsis"]
  },
  "nsis": {
    "oneClick": "false",
    "perMachine": "false",
    "installerIcon": "dist/favicon.ico",
    "createDesktopShortcut": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": "true",
    "menuCategory": "ATM",
    "shortcutName": "Smart ATM Manager"
  },
  "mac": {
    "icon": "dist",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist",
    "target": ["AppImage"]
  }
}
